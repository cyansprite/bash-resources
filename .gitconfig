[user]
    email = brandon.coffman@lexmark.com
    name = Jojo Brandon Coffman
[log]
    color = true
[difftool]
    prompt = true
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[color]
    ui = auto
    branch = always
    interactive = always
    status = always
[alias]
    s = status --short --branch
    l = whatchanged --date=format:'%Y-%m-%d %H:%M' --graph --decorate
[core]
	excludesfile = ~/.gitignore
