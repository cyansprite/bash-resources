! Term env var and login shell {{{1
Rxvt*termName:                         xterm-256color
Rxvt*loginShell:                       true

! Scrolls {{{1
! I want to scroll if I type something, jump (fast scrolling)
Rxvt*scrollTtyKeypress:                true
Rxvt*jumpScroll:                       true
! Disable everything else
Rxvt*scrollstyle:                      plain
Rxvt*scrollTtyOutput:                  false
Rxvt*scrollWithBuffer:                 false
Rxvt*skipScroll:                       false
Rxvt*scrollBar:                        false
Rxvt*scrollBar_right:                  false
Rxvt*scrollBar_floating:               false
Rxvt*saveLines:                        0
Rxvt*thickness:                        0

! Secondary screen and scroll if so {{{1
Rxvt*secondaryScreen:                  true
Rxvt*secondaryScroll:                  true

! use the fuckin bell :P {{{1
Rxvt*visualBell:                       true
Rxvt*mapAlert:                         true
Rxvt*urgentOnBell:                     true

! Key Mappings {{{1
Rxvt.iso14755:                         false
Rxvt.iso14755_52:                      false
Rxvt.keysym.M-s:                       builtin-string:
Rxvt.keysym.M-S:                       builtin-string:
Rxvt.keysym.C-s-t:                     builtin-string:

Rxvt.keysym.C-S-0x43:                  eval:selection_to_clipboard
Rxvt.keysym.C-S-0x56:                  eval:paste_primary
Rxvt.tripleclickwords:                 true

! Fonty Python {{{1
Rxvt*font:                             xft:PT Mono:size=10
! Rxvt*boldFont:                         xft:Anonymous Pro:bold
! Rxvt*italicFont:                       xft:PT Mono:italic
! Rxvt*boldItalicFont:                   xft:UbuntuMono:bold:italic
! Colors {{{1
*background:             #000000
*foreground:             #88aaaa

*underlineColor:         #aaaa00

*colorUL:                #ffff00
*colorIT:                #aaffff
*colorBD:                #9595ff

*cursorColor:            #ff00ff
*cursorColor2:           #000000

*fading:                 35
*fadeColor:              #884400

! Black : Dark Grey and Mid-Dark Grey
*color0 :  #222222
*color8 :  #555555

! Red   : Light Red and Red
*color1 :  #ff5555
*color9 :  #ff0000

! Green : Green and Chartreuse
*color2 :  #00ff00
*color10:  #7FFF00

! Yellow: Orange and Yellow
*color3 :  #ffaa00
*color11:  #ffff00

! Blue  : Blue and Electric Indigo
*color4 :  #00aaff
*color12:  #6F00FF

! Purple: Hot Pink and Magenta
*color5 :  #ff00aa
*color13:  #ff00ff

! Cyan  : Cyan and Verdigris
*color6 :  #00ffff
*color14:  #43b3ae

! Grey  : Grey and White
*color7 :  #cccccc
*color15:  #ffffff


! Extensions {{{1
URxvt.perl-ext:           default,matcher
URxvt.url-launcher:       sensible-browser
URxvt.keysym.M-u:    matcher:first
URxvt.keysym.M-d:    matcher:last
URxvt.keysym.M-l:    matcher:list
URxvt.keysym.M-u:         matcher:select
URxvt.matcher.button:     1
