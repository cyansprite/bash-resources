! Term env var and login shell {{{1
Rxvt*termName:                         xterm-256color
Rxvt*loginShell:                       true

! Scrolls {{{1
! I want to scroll if I type something, jump (fast scrolling)
Rxvt*scrollTtyKeypress:                true
Rxvt*jumpScroll:                       true
! Disable everything else
Rxvt*scrollstyle:                      plain
Rxvt*scrollTtyOutput:                  false
Rxvt*scrollWithBuffer:                 false
Rxvt*skipScroll:                       false
Rxvt*scrollBar:                        false
Rxvt*scrollBar_right:                  false
Rxvt*scrollBar_floating:               false
Rxvt*saveLines:                        0
Rxvt*thickness:                        0

! Secondary screen and scroll if so {{{1
Rxvt*secondaryScreen:                  true
Rxvt*secondaryScroll:                  true

! use the fuckin bell :P {{{1
Rxvt*visualBell:                       true
Rxvt*mapAlert:                         true
Rxvt*urgentOnBell:                     true

! Colors {{{1

! DONT FUCKIN SET THESE!!
! Rxvt*highlightColor:                 BanishYouToTheShadowRealmIfYouSetThis
! Rxvt*highlightTextColor:             BanishYouToTheShadowRealmIfYouSetThis
Rxvt*cursorColor:       #9f95ac
Rxvt*cursorColor2:      #ffffff
! Mappings {{{1
Rxvt.iso14755:                         false
Rxvt.iso14755_52:                      false
Rxvt.keysym.M-s:                       builtin-string:
Rxvt.keysym.M-S:                       builtin-string:
Rxvt.keysym.C-s-t:                     builtin-string:

Rxvt.keysym.C-S-0x43:                  eval:selection_to_clipboard
Rxvt.keysym.C-S-0x56:                  eval:paste_primary
Rxvt.tripleclickwords:                 true

