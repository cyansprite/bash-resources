// vim: ts=2 sts=2 sw=2
{
  // global
  "codeLens.enable": true,
  "codeLens.position": "eol",
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.jumpCommand": "drop",
  "coc.source.file.enable": true,
  "coc.source.word.filetypes": [
    "MD"
  ],
  "notification.focusable": false,
  "coc.source.dictionary.filetypes": [
    "MD"
  ],
  "copilot.enable": true,
  "copilot.kindLabel": "ÔÑì",
  "coc.source.file.ignoreHidden": false,
  "colors.filetypes": [
    "*"
  ],
  "pullDiagnostic.workspace": true,
  "diagnostic.errorSign": "üíÄ",
  "diagnostic.warningSign": "ÔÅ±",
  "diagnostic.infoSign": "‚Ñπ",
  "diagnostic.hintSign": "‚ú®",
  "diagnostic.virtualText": true,
  "diagnostic.floatConfig": {
    "border": true,
    "borderhighlight": "Bold",
    "highlight": "Normal"
  },
  "hover.floatConfig": {
    "border": true,
    "borderhighlight": "Bold",
    "highlight": "Normal"
  },
  // TODO hi groups
  "semanticTokens.enable": true,
  "semanticTokens.combinedModifiers": ["property"],
  "signature.floatConfig": {
    "border": true,
    "borderhighlight": "Bold",
    "highlight": "Normal"
  },
  "suggest.autoTrigger": "always",
  "suggest.floatConfig": {
    "border": true,
    "borderhighlight": "Bold",
    "highlight": "Normal"
  },
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "tree.closedIcon": "ÔÑÖ",
  "tree.openedIcon": "ÔÑá",
  "typescript.preferences.quoteStyle":"single",
  "workspace.ignoredFolders": [
    "tmp"
  ],
  "workspace.ignoredFiletypes": [
    "gitcommit",
    "sh",
    "bash",
    "log",
    "logs",
    "json"
  ],
  "htmlhint.options": {
    "tagname-lowercase": true,
    "attr-value-double-quotes": true,
    "tag-pair": true,
    "spec-char-escape": false,
    "id-unique": true,
    "src-not-empty": true,
    "attr-no-duplication": true,
    "attr-no-inline": true,
    "attr-no-title-case": true,
    "doctype-first": false
  },
  // flutter/dart
  "flutter.lsp.initialization.closingLabels": true,
  "dart.lineLength": 80,
  "flutter.lsp.initialization.suggestFromUnimportedLibraries": true,
  // java
  "kotlin.languageServer.enabled": false,
  "java.enabled": false,
  "java.jdt.ls.vmargs": "-javaagent:/home/brcoffman/java/lombok.jar -Djava.import.bazel.enabled=true",
  // typescript
  "javascript.referencesCodeLens.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "csharp": {
      "command": "~/.dotnet/tools/csharp-ls",
      "args": [
      ],
      "filetypes": [
        "cs"
      ]
    },
    "jsonnet": {
      "command": "jsonnet-language-server",
      "args": ["-t"],
      "rootPatterns": [".git/", "jsonnetfile.json"],
      "filetypes": ["jsonnet","libsonnet"]
    }
  },
}
